/* pages/applicationModule/staticDisplay/portraitScreen/normalFont/normalFont.wxss */
page{
  background-color: #000;
}
.pageHeight{
  height: 100vh;
}
.set{
  position: fixed;
  width: 100vw;
  bottom: 0;
  transition: all .5s;
}
.hide{
  bottom: -45vh;
}

.hideButton{
  margin: 0 auto;
}
.content{
  padding: 150rpx 30rpx;
  white-space:pre-line
}
.contentCenter{
  text-align: center;
}

.colorItem{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, .5);
  margin: 0 auto;
  
}

.colorItemGroup{
  margin: 20rpx;
  display: flex;
}
.colorGroup{
  justify-content: end;
}

.pitchOn{
 
  box-shadow: 0px 0px 12px 2px rgba(255, 255, 255, 1);
 
}